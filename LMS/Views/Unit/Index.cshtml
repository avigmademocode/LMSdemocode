
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AppLayout.cshtml";
}
<script src="~/AngularJs/AddUnit/jsUnitController.js"></script>
<script src="~/AngularJs/AjsFactory/UserFactory.js"></script>


<div ng-controller="UnitController">
    <div class="row page-title align-items-lg-center">
        <div class="col-sm-6 col-sm offset-3">
            <h1 class="weight-300 h3 title"> Add Unit</h1>

        </div>
    </div>


    <div class="col-md-9 col-md offset-2">
        <div class="card mb-6">
            <div class="card-body">
                <form name="form" ng-submit="SubmitUnit()">

                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <label>Project Name</label>
                            <select class="form-control" ng-model="form.projectname">
                                <option value="">Select Project Name</option>
                                <option value="1">abc</option>
                                <option value="2">pqr</option>
                                <option value="3">other</option>
                            </select>

                        </div>
                        <div class=" form-group col-md-4">
                            <label> Unit Type</label>
                            <select class="form-control" ng-model="form.unittype">
                                <option value="">Select Unit Type</option>
                                <option value="1">Core</option>
                                <option value="2">Elective</option>
                                <option value="3">Fundamental</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label> Unit Title</label>
                            <input type="text" placeholder="Unit Title" class="form-control" ng-model="form.unittitle" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>NQF Level</label>
                            <input type="text" placeholder="NQF Level" class="form-control" ng-model="form.NQFLevel" />
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label>Credits</label>
                                <select class="form-control" ng-model="form.credits">
                                    <option value="">Select Credits</option>
                                    <option value="1">Yes</option>
                                    <option value="2">No</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label>Total Credits</label>
                                <input type="number" class="form-control" ng-model="form.totalcredits" />
                            </div>

                                <div class="col-md-4">
                                    <label>Number Of Days Required To Complete</label>
                                    <input type="number" class="form-control" ng-model="form.NoOfDaysReqToComplete" />
                                </div>
                            </div>
                        </div>

                    <div class="form-row">
                        <div class=" col-md-4">
                            <label>Amount Approved For The Unit</label>
                            <input type="number" class="form-control" ng-model="form.AmountApprovedForTheUnit" />
                        </div>
                    </div>

                    <br /><br />


                    <button type="submit" class="btn btn-primary">Submit</button>

                </form>
            </div>
        </div>
    </div>
</div>